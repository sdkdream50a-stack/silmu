  <a href="https://www.facebook.com/sharer/sharer.php?u=<%= ERB::Util.url_encode(local_assigns[:url] || canonical_url) %>"
     target="_blank"
     rel="noopener noreferrer"
     class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 hover:bg-blue-700 text-white transition-colors"
     title="페이스북 공유">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
  </a>

  <%# 트위터 %>
  <a href="https://twitter.com/intent/tweet?text=<%= ERB::Util.url_encode(local_assigns[:title]) %>&url=<%= ERB::Util.url_encode(local_assigns[:url] || canonical_url) %>"
     target="_blank"
     rel="noopener noreferrer"
     class="flex items-center justify-center w-10 h-10 rounded-full bg-slate-900 hover:bg-slate-950 text-white transition-colors"
     title="트위터 공유">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>

  <%# URL 복사 %>
  <button onclick="copyToClipboard('<%= local_assigns[:url] || canonical_url %>')"
          class="flex items-center justify-center w-10 h-10 rounded-full bg-slate-200 hover:bg-slate-300 text-slate-700 transition-colors"
          title="링크 복사">
    <span class="material-symbols-outlined text-lg">link</span>
  </button>
</div>

<script>
// 카카오톡 공유 (지연 로딩 지원)
function shareKakao(title, url, description) {
  window.initKakao().then(function() {
    _doKakaoShare(title, url, description);
  });
}
function _doKakaoShare(title, url, description) {
  Kakao.Share.sendDefault({
    objectType: 'feed',
    content: {
      title: title,
      description: description,
      imageUrl: 'https://silmu.kr/og-image.png',
      link: {
        mobileWebUrl: url,
        webUrl: url,
      },
    },
    buttons: [
      {
        title: '자세히 보기',
        link: {
          mobileWebUrl: url,
          webUrl: url,
        },
      },
    ],
  });
}

// URL 복사
function copyToClipboard(text) {
  if (navigator.clipboard) {
    navigator.clipboard.writeText(text).then(() => {
      alert('링크가 클립보드에 복사되었습니다!');
    }).catch(() => {
      fallbackCopy(text);
    });
  } else {
    fallbackCopy(text);
  }
}

function fallbackCopy(text) {
  const textarea = document.createElement('textarea');
  textarea.value = text;
  textarea.style.position = 'fixed';
  textarea.style.opacity = '0';
  document.body.appendChild(textarea);
  textarea.select();
  try {
    document.execCommand('copy');
    alert('링크가 클립보드에 복사되었습니다!');
  } catch (err) {
    alert('복사에 실패했습니다. 수동으로 복사해주세요: ' + text);
  }
  document.body.removeChild(textarea);
}
</script>
