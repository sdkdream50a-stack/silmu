<%# 가격별 계약방식 안내 페이지 %>

<section class="gradient-forest text-white py-12 lg:py-16">
  <div class="container-wide">
    <div class="flex items-start gap-5">
      <div class="w-16 h-16 bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center border border-white/20 shadow-lg">
        <span class="material-symbols-outlined text-4xl text-white">calculate</span>
      </div>
      <div>
        <h1 class="text-3xl lg:text-4xl font-bold tracking-tight mb-2">가격별 계약방식 안내</h1>
        <p class="text-forest-100 text-lg">추정가격을 입력하면 적정 계약방식을 안내해드립니다</p>
      </div>
    </div>
  </div>
</section>

<section class="section py-10">
  <div class="container-wide max-w-4xl">
    <div class="card p-8">
      <h2 class="text-xl font-bold text-navy-900 mb-6">계약 정보 입력</h2>

      <%= form_with url: chatbot_price_path, method: :get, data: { turbo_frame: "price_result" }, class: "space-y-6" do |f| %>
        <div>
          <label class="block text-sm font-medium text-navy-700 mb-2">계약 유형</label>
          <div class="grid grid-cols-3 gap-4">
            <label class="relative">
              <input type="radio" name="category" value="goods" class="peer sr-only" <%= @category == 'goods' ? 'checked' : '' %>>
              <div class="p-4 border-2 border-gray-200 rounded-xl text-center cursor-pointer peer-checked:border-forest-500 peer-checked:bg-forest-50 hover:border-gray-300 transition-colors">
                <span class="material-symbols-outlined text-2xl text-navy-600 mb-2 block">inventory_2</span>
                <span class="font-medium text-navy-900">물품</span>
              </div>
            </label>
            <label class="relative">
              <input type="radio" name="category" value="service" class="peer sr-only" <%= @category == 'service' ? 'checked' : '' %>>
              <div class="p-4 border-2 border-gray-200 rounded-xl text-center cursor-pointer peer-checked:border-forest-500 peer-checked:bg-forest-50 hover:border-gray-300 transition-colors">
                <span class="material-symbols-outlined text-2xl text-navy-600 mb-2 block">support_agent</span>
                <span class="font-medium text-navy-900">용역</span>
              </div>
            </label>
            <label class="relative">
              <input type="radio" name="category" value="construction" class="peer sr-only" <%= @category == 'construction' ? 'checked' : '' %>>
              <div class="p-4 border-2 border-gray-200 rounded-xl text-center cursor-pointer peer-checked:border-forest-500 peer-checked:bg-forest-50 hover:border-gray-300 transition-colors">
                <span class="material-symbols-outlined text-2xl text-navy-600 mb-2 block">construction</span>
                <span class="font-medium text-navy-900">공사</span>
              </div>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-navy-700 mb-2">추정가격 (부가세 제외)</label>
          <div class="relative">
            <input type="number" name="price" value="<%= @price if @price && @price > 0 %>"
                   placeholder="금액을 입력하세요"
                   class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-forest-500 focus:border-forest-500">
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-navy-500">원</span>
          </div>
        </div>

        <button type="submit" class="w-full py-3 bg-forest-600 text-white font-semibold rounded-xl hover:bg-forest-700 transition-colors">
          계약방식 확인하기
        </button>
      <% end %>
    </div>

    <turbo-frame id="price_result">
      <% if @result %>
        <div class="mt-8">
          <%= render partial: 'price_result' %>
        </div>
      <% end %>
    </turbo-frame>
  </div>
</section>
