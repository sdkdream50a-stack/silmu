<%# 광고 — 시험 정보 하단 %>
<div class="py-4 px-4 bg-slate-50 flex justify-center border-t border-slate-100">
  <%= render 'shared/ad_slot', position: 'home-mid' %>
</div>

<!-- 2-2. 4권 커리큘럼 섹션 -->
<section class="py-16 px-4 bg-slate-50">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-10">
      <div class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 text-sm font-semibold px-4 py-2 rounded-full mb-4">
        <span class="material-symbols-outlined text-base">school</span>
        표준교재 기반 완전 커리큘럼
      </div>
      <h2 class="text-2xl font-bold text-slate-900 mb-3">4권·27장 체계적 학습</h2>
      <p class="text-slate-500 max-w-xl mx-auto">공공조달관리사 표준교재를 챕터별로 분류하여<br>학습목표·핵심키워드·시험 출제 포인트를 제공합니다.</p>
    </div>

    <!-- 4과목 그리드 -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mb-8">
      <% [
        {
          id: 1, number: "1권", title: "공공조달의 이해",
          subtitle: "공공조달 개념·법령·추진체계",
          chapters: 7, color: "emerald", icon: "account_balance",
          points: ["공공조달의 개념과 범위", "국가계약법 체계", "조달청 기능과 역할"]
        },
        {
          id: 2, number: "2권", title: "공공조달 계획분석",
          subtitle: "조달 계획 수립·시장 분석·예산",
          chapters: 6, color: "blue", icon: "analytics",
          points: ["조달 전략 수립 방법", "시장 분석 기법", "예정가격 산정 원칙"]
        },
        {
          id: 3, number: "3권", title: "공공계약관리",
          subtitle: "입찰·계약 체결·이행·사후관리",
          chapters: 6, color: "violet", icon: "handshake",
          points: ["경쟁입찰 절차와 방법", "수의계약 요건과 절차", "계약 이행 관리"]
        },
        {
          id: 4, number: "4권", title: "공공조달 관리실무",
          subtitle: "검수·대금·위반·제재·윤리",
          chapters: 8, color: "rose", icon: "manage_accounts",
          points: ["검수·검사 실무", "입찰 참가자격 제한", "청렴의무와 행정책임"]
        }
      ].each do |s| %>
        <% bg_map = { "emerald" => "bg-emerald-600", "blue" => "bg-blue-600", "violet" => "bg-violet-600", "rose" => "bg-rose-600" } %>
        <% border_map = { "emerald" => "border-emerald-200 hover:border-emerald-400", "blue" => "border-blue-200 hover:border-blue-400", "violet" => "border-violet-200 hover:border-violet-400", "rose" => "border-rose-200 hover:border-rose-400" } %>
        <% bg_light_map = { "emerald" => "bg-emerald-50", "blue" => "bg-blue-50", "violet" => "bg-violet-50", "rose" => "bg-rose-50" } %>
        <% badge_map = { "emerald" => "bg-emerald-100 text-emerald-700", "blue" => "bg-blue-100 text-blue-700", "violet" => "bg-violet-100 text-violet-700", "rose" => "bg-rose-100 text-rose-700" } %>
        <% text_map = { "emerald" => "text-emerald-700", "blue" => "text-blue-700", "violet" => "text-violet-700", "rose" => "text-rose-700" } %>
        <a href="<%= exam_subject_path(s[:id]) %>"
           class="group bg-white rounded-2xl border <%= border_map[s[:color]] %> hover:shadow-lg transition-all overflow-hidden">
          <div class="<%= bg_light_map[s[:color]] %> px-5 py-4 flex items-center gap-4">
            <div class="w-12 h-12 <%= bg_map[s[:color]] %> rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="material-symbols-outlined text-white text-2xl"><%= s[:icon] %></span>
            </div>
            <div>
              <span class="text-xs font-bold <%= badge_map[s[:color]] %> px-2 py-0.5 rounded-full"><%= s[:number] %> · <%= s[:chapters] %>장</span>
              <h3 class="font-bold text-slate-900 text-base mt-1"><%= s[:title] %></h3>
              <p class="text-xs text-slate-500"><%= s[:subtitle] %></p>
            </div>
          </div>
          <div class="px-5 py-4">
            <ul class="space-y-1.5">
              <% s[:points].each do |pt| %>
                <li class="flex items-center gap-2 text-sm text-slate-600">
                  <span class="material-symbols-outlined <%= text_map[s[:color]] %> text-sm flex-shrink-0">check_circle</span>
                  <%= pt %>
                </li>
              <% end %>
            </ul>
            <div class="mt-4 flex items-center gap-1 <%= text_map[s[:color]] %> font-semibold text-sm group-hover:gap-2 transition-all">
              <span class="material-symbols-outlined text-base">school</span>
              학습 시작하기
              <span class="material-symbols-outlined text-base">arrow_forward</span>
            </div>
          </div>
        </a>
      <% end %>
    </div>

    <!-- 용어집 CTA -->
    <div class="bg-gradient-to-r from-slate-800 to-slate-700 rounded-2xl p-5 text-white flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="w-10 h-10 bg-yellow-400/20 rounded-xl flex items-center justify-center flex-shrink-0">
          <span class="material-symbols-outlined text-yellow-300 text-xl">dictionary</span>
        </div>
        <div>
          <h3 class="font-bold">핵심 용어집</h3>
          <p class="text-slate-300 text-sm">4권 교재 전체 키워드 <%= ExamCurriculum.all_keywords.size %>개 한눈에 보기</p>
        </div>
      </div>
      <a href="<%= exam_keywords_path %>"
         class="flex-shrink-0 bg-yellow-400 text-slate-900 font-bold px-5 py-2.5 rounded-xl hover:bg-yellow-300 transition-colors text-sm">
        용어집 보기 →
      </a>
    </div>
  </div>
</section>

<!-- 3. 무료 학습 자료 -->
<section id="free-study" class="py-16 px-4 bg-gradient-to-b from-blue-50 to-white">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-2xl font-bold text-slate-900 mb-3">지금 바로 무료로 공부하세요</h2>
      <p class="text-slate-500">교재 2~4권의 계약 실무 영역(수의계약·경쟁입찰·계약체결·이행관리)을 집중 커버합니다</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- 법령 가이드 -->
      <a href="https://silmu.kr/topics" class="group bg-white rounded-2xl p-8 border border-blue-100 hover:border-blue-300 hover:shadow-lg transition-all">
        <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-5 group-hover:bg-blue-500 transition-colors">
          <span class="material-symbols-outlined text-blue-600 group-hover:text-white transition-colors text-3xl">menu_book</span>
        </div>
        <h3 class="font-bold text-slate-900 text-xl mb-2">법령 가이드</h3>
        <div class="text-4xl font-bold text-blue-600 mb-2">55개</div>
        <p class="text-slate-500">수의계약·경쟁입찰·보증금·이행관리 등<br>계약 전 과정 법령 조문 + 실무 해설</p>
        <div class="mt-5 text-blue-600 font-semibold flex items-center gap-1 group-hover:gap-2 transition-all">
          학습하기 <span class="material-symbols-outlined text-base">arrow_forward</span>
        </div>
      </a>

      <!-- 감사사례 -->
      <a href="https://silmu.kr/audit-cases" class="group bg-white rounded-2xl p-8 border border-red-100 hover:border-red-300 hover:shadow-lg transition-all">
        <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-5 group-hover:bg-red-500 transition-colors">
          <span class="material-symbols-outlined text-red-600 group-hover:text-white transition-colors text-3xl">gavel</span>
        </div>
        <h3 class="font-bold text-slate-900 text-xl mb-2">감사사례</h3>
        <div class="text-4xl font-bold text-red-600 mb-2">80건</div>
        <p class="text-slate-500">실제 감사원·자치단체 감사 적발 사례로<br>배우는 위반 유형 + 처벌 규정</p>
        <div class="mt-5 text-red-600 font-semibold flex items-center gap-1 group-hover:gap-2 transition-all">
          사례 보기 <span class="material-symbols-outlined text-base">arrow_forward</span>
        </div>
      </a>
    </div>

    <!-- 추천 학습 주제 -->
    <div class="mt-10 bg-blue-700 rounded-2xl p-6 text-white">
      <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
        <span class="material-symbols-outlined">tips_and_updates</span>
        시험 고출제 예상 주제 TOP 6
      </h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
        <% [
          ["수의계약 사유", "private-contract"],
          ["입찰참가자격", "bid-qualification"],
          ["계약보증금", "contract-guarantee-deposit"],
          ["지체상금", "late-penalty"],
          ["낙찰하한율", "lowest-bid-rate"],
          ["검수·검사 절차", "inspection"]
        ].each do |title, slug| %>
          <a href="https://silmu.kr/topics/<%= slug %>" class="bg-white/20 hover:bg-white/30 rounded-xl px-4 py-3 text-sm font-semibold transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined text-yellow-300 text-base">arrow_forward_ios</span>
            <%= title %>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</section>

