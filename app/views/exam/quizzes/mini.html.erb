<%# exam.silmu.kr — 미니 퀴즈 (랜덤 10문제) %>

<!-- 헤더 -->
<section class="bg-gradient-to-br from-emerald-800 via-teal-700 to-cyan-700 text-white py-10 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center gap-2 text-emerald-200 text-sm mb-4">
      <a href="https://exam.silmu.kr" class="hover:text-white transition-colors">홈</a>
      <span class="material-symbols-outlined text-sm">chevron_right</span>
      <a href="<%= exam_quiz_index_path %>" class="hover:text-white transition-colors">모의고사</a>
      <span class="material-symbols-outlined text-sm">chevron_right</span>
      <span>미니 퀴즈</span>
    </div>
    <div class="flex items-center gap-4">
      <div class="w-14 h-14 bg-white/20 rounded-2xl flex items-center justify-center flex-shrink-0">
        <span class="material-symbols-outlined text-white text-3xl">bolt</span>
      </div>
      <div>
        <div class="text-emerald-200 text-sm font-medium mb-1">빠른 실력 점검</div>
        <h1 class="text-2xl md:text-3xl font-bold">미니 퀴즈</h1>
        <p class="text-emerald-200 mt-1">랜덤 10문제 · 즉시 채점 · 약 15분</p>
      </div>
    </div>
  </div>
</section>

<!-- 퀴즈 메인 (Stimulus) -->
<section class="py-8 px-4 bg-slate-50 min-h-[60vh]">
  <div class="max-w-3xl mx-auto"
       data-controller="exam-quiz"
       data-exam-quiz-questions-value="<%= @questions.to_json %>"
       data-exam-quiz-subject-id-value="mini"
       data-exam-quiz-back-path-value="<%= exam_quiz_index_path %>"
       data-exam-quiz-chapter-map-value="<%= @chapter_map.to_json.html_safe %>"
       data-exam-quiz-chapter-num-value="0">

    <!-- 진행 상태 바 -->
    <div data-exam-quiz-target="progressArea" class="mb-6">
      <div class="flex items-center justify-between text-sm text-slate-500 mb-2">
        <span>문제 <strong data-exam-quiz-target="currentNum" class="text-slate-800">1</strong> / <strong><%= @questions.size %></strong></span>
        <span>점수: <strong data-exam-quiz-target="scoreDisplay" class="text-emerald-600">0</strong>점</span>
      </div>
      <div class="w-full bg-slate-200 rounded-full h-2.5">
        <div data-exam-quiz-target="progressBar"
             class="bg-emerald-500 h-2.5 rounded-full transition-all duration-300"
             style="width: 0%"></div>
      </div>
    </div>

    <!-- 문제 영역 -->
    <div data-exam-quiz-target="questionArea" class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 md:p-8">
      <!-- 문제 번호 배지 -->
      <div class="flex items-center gap-2 mb-5">
        <span data-exam-quiz-target="questionBadge"
              class="inline-flex items-center gap-1 bg-emerald-100 text-emerald-700 text-xs font-bold px-3 py-1 rounded-full">
          문제 1
        </span>
      </div>

      <!-- 문제 텍스트 -->
      <p data-exam-quiz-target="questionText"
         class="text-slate-800 text-lg font-semibold leading-relaxed mb-6">
      </p>

      <!-- 선택지 -->
      <div data-exam-quiz-target="optionsArea" class="space-y-3">
      </div>

      <!-- 피드백 (정답/오답 해설) -->
      <div data-exam-quiz-target="feedbackArea" class="hidden mt-6">
      </div>

      <!-- 다음 버튼 -->
      <div data-exam-quiz-target="nextArea" class="hidden mt-6 flex justify-end">
        <button data-action="click->exam-quiz#nextQuestion"
                data-exam-quiz-target="nextBtn"
                class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-bold px-6 py-3 rounded-xl transition-colors">
          다음 문제
          <span class="material-symbols-outlined">arrow_forward</span>
        </button>
      </div>
    </div>

    <!-- 결과 화면 (hidden → Stimulus에서 표시) -->
    <div data-exam-quiz-target="resultArea" class="hidden">
    </div>
  </div>
</section>
