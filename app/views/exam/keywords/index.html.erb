<%# 핵심 용어집 — 정의 + 예시 문장 + 문제 연결 %>

<!-- 헤더 -->
<section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700 text-white py-12 px-4">
  <div class="max-w-5xl mx-auto">
    <div class="flex items-center gap-2 text-slate-400 text-sm mb-5">
      <a href="https://exam.silmu.kr" class="hover:text-white transition-colors">홈</a>
      <span class="material-symbols-outlined text-xs">chevron_right</span>
      <a href="<%= exam_subjects_path %>" class="hover:text-white transition-colors">커리큘럼</a>
      <span class="material-symbols-outlined text-xs">chevron_right</span>
      <span class="text-white">핵심 용어집</span>
    </div>

    <div class="flex flex-col sm:flex-row items-start gap-5">
      <div class="w-14 h-14 bg-yellow-400/20 rounded-2xl flex items-center justify-center flex-shrink-0">
        <span class="material-symbols-outlined text-yellow-300 text-3xl">dictionary</span>
      </div>
      <div class="flex-1">
        <h1 class="text-3xl md:text-4xl font-bold leading-tight mb-2">핵심 용어집</h1>
        <p class="text-slate-300">4권 교재 전체 <strong class="text-yellow-300"><%= @total_count %>개</strong> 키워드 — 정의·예시·모의고사 문제 연결</p>
      </div>
    </div>

    <!-- 통계 배지 -->
    <div class="flex flex-wrap gap-3 mt-6">
      <div class="flex items-center gap-2 bg-white/10 rounded-lg px-3 py-2 text-sm">
        <span class="material-symbols-outlined text-yellow-300 text-base">menu_book</span>
        전체 용어 <strong class="text-yellow-300 ml-1"><%= @total_count %>개</strong>
      </div>
      <div class="flex items-center gap-2 bg-white/10 rounded-lg px-3 py-2 text-sm">
        <span class="material-symbols-outlined text-emerald-300 text-base">description</span>
        정의+예시 제공 <strong class="text-emerald-300 ml-1"><%= @detail_count %>개</strong>
      </div>
      <div class="flex items-center gap-2 bg-white/10 rounded-lg px-3 py-2 text-sm">
        <span class="material-symbols-outlined text-blue-300 text-base">quiz</span>
        모의고사 연결 가능
      </div>
    </div>
  </div>
</section>

<!-- 필터 & 검색 -->
<section class="bg-white border-b border-slate-200 sticky top-16 z-40 shadow-sm">
  <div class="max-w-5xl mx-auto px-4 py-3">
    <%= form_with url: exam_keywords_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3 items-center" do |f| %>
      <!-- 과목 필터 탭 -->
      <div class="flex gap-2 flex-wrap">
        <a href="<%= exam_keywords_path(q: @search) %>"
           class="px-3 py-1.5 rounded-lg text-sm font-semibold transition-colors <%= @filter.blank? || @filter == 0 ? 'bg-slate-900 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">
          전체 <span class="text-xs opacity-70">(<%= @total_count %>)</span>
        </a>
        <% [
          [1, "1권", "emerald"],
          [2, "2권", "blue"],
          [3, "3권", "violet"],
          [4, "4권", "rose"]
        ].each do |id, label, color| %>
          <% count = @all_keywords.count { |k| k[:subject_id] == id } %>
          <a href="<%= exam_keywords_path(subject_id: id, q: @search) %>"
             class="px-3 py-1.5 rounded-lg text-sm font-semibold transition-colors <%= @filter == id ? "bg-#{color}-600 text-white" : "bg-slate-100 text-slate-600 hover:bg-slate-200" %>">
            <%= label %> <span class="text-xs opacity-70">(<%= count %>)</span>
          </a>
        <% end %>
      </div>

      <!-- 검색 -->
      <div class="flex gap-2 sm:ml-auto">
        <div class="relative">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-base">search</span>
          <%= f.text_field :q, value: @search,
              placeholder: "용어·정의 검색...",
              class: "pl-9 pr-4 py-1.5 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-52" %>
          <%= f.hidden_field :subject_id, value: @filter if @filter&.positive? %>
        </div>
        <% if @search.present? %>
          <a href="<%= exam_keywords_path(subject_id: @filter&.positive? ? @filter : nil) %>"
             class="flex items-center gap-1 px-3 py-1.5 border border-slate-200 rounded-lg text-sm text-slate-500 hover:bg-slate-50">
            <span class="material-symbols-outlined text-base">close</span>
            초기화
          </a>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<!-- 본문 -->
<section class="py-8 px-4 bg-slate-50 min-h-screen">
  <div class="max-w-5xl mx-auto">

    <!-- 결과 카운트 + 사용 안내 -->
    <div class="mb-5 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
      <p class="text-sm text-slate-500">
        <% if @search.present? %>
          "<strong class="text-slate-700"><%= @search %></strong>" 검색 결과
          <strong class="text-slate-700"><%= @filtered_keywords.size %>개</strong>
        <% else %>
          총 <strong class="text-slate-700"><%= @filtered_keywords.size %>개</strong> 키워드
        <% end %>
      </p>
      <div class="flex items-center gap-1.5 text-xs text-slate-400 bg-slate-100 rounded-lg px-3 py-1.5">
        <span class="material-symbols-outlined text-sm">touch_app</span>
        카드를 클릭하면 정의·예시·문제를 확인할 수 있습니다
      </div>
    </div>

    <% if @filtered_keywords.empty? %>
      <div class="text-center py-20">
        <span class="material-symbols-outlined text-slate-300 text-6xl">search_off</span>
        <p class="text-slate-500 mt-4 text-lg">검색 결과가 없습니다</p>
        <a href="<%= exam_keywords_path %>" class="mt-4 inline-block text-blue-600 hover:underline text-sm">전체 용어집 보기</a>
      </div>
    <% else %>
      <%# 과목별로 그룹화해서 표시 %>
      <% grouped = @filtered_keywords.group_by { |k| k[:subject_id] } %>
      <% subject_order = @filter&.positive? ? [@filter] : [1, 2, 3, 4] %>

      <% subject_order.each do |sid| %>
        <% keywords_in_subject = grouped[sid] %>
        <% next if keywords_in_subject.blank? %>
        <% subject = ExamCurriculum.find_subject(sid) %>
        <% next unless subject %>
        <% colors = ExamCurriculum.colors(subject[:color]) %>

        <div class="mb-10">
          <!-- 과목 헤더 -->
          <div class="flex items-center gap-3 mb-4">
            <div class="w-9 h-9 <%= colors[:bg_dark] %> rounded-xl flex items-center justify-center">
              <span class="material-symbols-outlined text-white text-lg"><%= subject[:icon] %></span>
            </div>
            <div>
              <span class="text-xs font-bold <%= colors[:badge] %> px-2 py-0.5 rounded-full mr-2"><%= subject[:number] %></span>
              <span class="font-bold text-slate-900"><%= subject[:title] %></span>
              <span class="text-slate-400 text-sm ml-2"><%= keywords_in_subject.size %>개</span>
            </div>
          </div>

          <!-- 키워드 카드 그리드 -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <% keywords_in_subject.each do |kw| %>
              <% has_detail = kw[:definition].present? %>
              <% has_quiz = kw[:quiz_ids].any? %>

              <% if has_detail %>
                <%# 상세 정보 있는 경우: 클릭 가능한 <details> 카드 %>
                <details class="bg-white rounded-xl border <%= colors[:border] %> hover:shadow-md transition-all group open:shadow-md open:border-opacity-60">
                  <summary class="flex items-start gap-3 px-4 py-3 cursor-pointer list-none select-none">
                    <div class="w-6 h-6 <%= colors[:bg] %> rounded-md flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="material-symbols-outlined text-xs <%= colors[:text_dark] %>">key</span>
                    </div>
                    <div class="min-w-0 flex-1">
                      <div class="font-semibold text-slate-800 text-sm leading-snug group-open:<%= colors[:text_dark] %>">
                        <%= kw[:keyword] %>
                      </div>
                      <div class="text-xs text-slate-400 mt-0.5">
                        제<%= kw[:chapter_number] %>장 · <%= kw[:chapter_title] %>
                      </div>
                    </div>
                    <!-- 배지 영역 -->
                    <div class="flex items-center gap-1.5 flex-shrink-0">
                      <% if has_quiz %>
                        <span class="inline-flex items-center gap-0.5 bg-blue-100 text-blue-700 text-[10px] font-bold px-1.5 py-0.5 rounded-full">
                          <span class="material-symbols-outlined text-[10px]">quiz</span>
                          문제
                        </span>
                      <% end %>
                      <span class="material-symbols-outlined text-slate-400 text-sm transition-transform group-open:rotate-90">chevron_right</span>
                    </div>
                  </summary>

                  <!-- 펼침 내용 -->
                  <div class="px-4 pb-4 pt-2 border-t border-slate-100">
                    <!-- 정의 -->
                    <div class="mb-3">
                      <div class="flex items-center gap-1.5 text-xs font-bold text-slate-500 mb-1.5">
                        <span class="material-symbols-outlined text-sm">info</span>
                        정의
                      </div>
                      <p class="text-sm text-slate-700 leading-relaxed bg-slate-50 rounded-lg px-3 py-2">
                        <%= kw[:definition] %>
                      </p>
                    </div>

                    <!-- 예시 문장 -->
                    <div class="mb-3">
                      <div class="flex items-center gap-1.5 text-xs font-bold text-slate-500 mb-1.5">
                        <span class="material-symbols-outlined text-sm">edit_note</span>
                        실무 예시
                      </div>
                      <p class="text-sm text-slate-600 italic leading-relaxed bg-blue-50 rounded-lg px-3 py-2 border-l-2 border-blue-300">
                        "<%= kw[:example] %>"
                      </p>
                    </div>

                    <!-- 하단 링크 -->
                    <div class="flex items-center gap-2 flex-wrap">
                      <a href="<%= exam_subject_chapter_path(kw[:subject_id], kw[:chapter_number]) %>"
                         class="inline-flex items-center gap-1 <%= colors[:text_dark] %> text-xs font-semibold hover:underline">
                        <span class="material-symbols-outlined text-sm">school</span>
                        챕터 학습하기
                      </a>
                      <% if has_quiz %>
                        <% quiz_id = kw[:quiz_ids].first %>
                        <% subject_id = kw[:subject_id] %>
                        <a href="<%= exam_quiz_path(subject_id) %>"
                           class="inline-flex items-center gap-1 bg-blue-600 text-white text-xs font-semibold px-2.5 py-1 rounded-lg hover:bg-blue-700 transition-colors">
                          <span class="material-symbols-outlined text-sm">quiz</span>
                          관련 문제 풀기
                        </a>
                      <% end %>
                    </div>
                  </div>
                </details>

              <% else %>
                <%# 상세 정보 없는 경우: 기존 링크 카드 %>
                <a href="<%= exam_subject_chapter_path(kw[:subject_id], kw[:chapter_number]) %>"
                   class="bg-white rounded-xl border <%= colors[:border] %> hover:shadow-md px-4 py-3 transition-all group flex items-start gap-3">
                  <div class="w-6 h-6 <%= colors[:bg] %> rounded-md flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="material-symbols-outlined text-xs <%= colors[:text_dark] %>">key</span>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="font-semibold text-slate-800 text-sm leading-snug group-hover:<%= colors[:text_dark] %> transition-colors">
                      <%= kw[:keyword] %>
                    </div>
                    <div class="text-xs text-slate-400 mt-1">
                      제<%= kw[:chapter_number] %>장 · <%= kw[:chapter_title] %>
                    </div>
                  </div>
                  <span class="material-symbols-outlined text-slate-300 text-sm flex-shrink-0 mt-0.5 group-hover:<%= colors[:text_dark] %> transition-colors">arrow_forward_ios</span>
                </a>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- CTA -->
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <a href="<%= exam_subjects_path %>"
         class="bg-gradient-to-r from-blue-700 to-blue-600 rounded-2xl p-5 text-white flex items-center gap-4 hover:shadow-lg transition-shadow group">
        <div class="w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center flex-shrink-0">
          <span class="material-symbols-outlined text-white text-xl">school</span>
        </div>
        <div>
          <h3 class="font-bold">체계적 커리큘럼 학습</h3>
          <p class="text-blue-200 text-sm">4권 27챕터 순서대로 학습하기</p>
        </div>
        <span class="material-symbols-outlined text-white/60 ml-auto group-hover:translate-x-1 transition-transform">arrow_forward</span>
      </a>
      <a href="<%= exam_quiz_index_path %>"
         class="bg-gradient-to-r from-slate-800 to-slate-700 rounded-2xl p-5 text-white flex items-center gap-4 hover:shadow-lg transition-shadow group">
        <div class="w-10 h-10 bg-yellow-400/20 rounded-xl flex items-center justify-center flex-shrink-0">
          <span class="material-symbols-outlined text-yellow-300 text-xl">quiz</span>
        </div>
        <div>
          <h3 class="font-bold">모의고사로 확인</h3>
          <p class="text-slate-300 text-sm">200문항 즉시채점 모의고사</p>
        </div>
        <span class="material-symbols-outlined text-white/60 ml-auto group-hover:translate-x-1 transition-transform">arrow_forward</span>
      </a>
    </div>
  </div>
</section>
