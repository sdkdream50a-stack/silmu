<script>
// 공문/양식 생성 팝업 데이터
const docPopupData = {
  "견적 요청": [
    {
      title: "견적 요청 공문 (1인)",
      desc: "2천만원 이하 1인 견적 요청",
      icon: "mail",
      prompt: "1인 견적 요청 공문을 작성해줘. 사무용품 구매 1,500만원, 품목 5개, 납품기한 7일."
    },
    {
      title: "견적 요청 공문 (2인 이상)",
      desc: "2천만원 초과 2인 이상 견적 요청",
      icon: "group",
      prompt: "2인 이상 견적 요청 공문을 작성해줘. 비품 구매 2,500만원, 업체 3곳 선정, 견적 마감 5일."
    }
  ],
  "계약 체결": [
    {
      title: "간이계약서",
      desc: "소액계약용 간소화 계약서",
      icon: "description",
      prompt: "간이계약서를 작성해줘. 사무용품 구매 1,500만원, 납품기한 10일, 지체상금 조항 포함."
    },
    {
      title: "계약 체결 품의서",
      desc: "계약 체결 결재 서류",
      icon: "approval",
      prompt: "계약 체결 품의서를 작성해줘. 1인 견적 결과 최저가 업체 선정, 계약금액 1,500만원."
    }
  ],
  "검수 및 지급": [
    {
      title: "검수조서",
      desc: "물품 납품 검수 결과",
      icon: "fact_check",
      prompt: "검수조서를 작성해줘. 사무용품 10종 납품, 수량·품질·규격 모두 적합."
    },
    {
      title: "대금 지급 품의서",
      desc: "검수 완료 후 대금 지급",
      icon: "payments",
      prompt: "대금 지급 품의서를 작성해줘. 검수 완료, 계약금액 1,500만원 전액 지급."
    }
  ]
};

function openDocPopup(event) {
  event.preventDefault();
  const popup = document.getElementById('docPopup');
  const categoriesContainer = document.getElementById('docCategories');

  categoriesContainer.innerHTML = '';

  Object.entries(docPopupData).forEach(([category, items]) => {
    const categoryDiv = document.createElement('div');
    categoryDiv.className = 'col-span-full';
    categoryDiv.innerHTML = `
      <h4 class="font-bold text-lg text-gray-900 mb-3 flex items-center gap-2">
        <span class="material-symbols-outlined text-amber-600">folder</span>
        ${category}
      </h4>
    `;

    const itemsGrid = document.createElement('div');
    itemsGrid.className = 'grid grid-cols-1 md:grid-cols-2 gap-3 mb-6';

    items.forEach(item => {
      const itemCard = document.createElement('a');
      itemCard.href = `/tools/official-document?prompt=${encodeURIComponent(item.prompt)}`;
      itemCard.className = 'bg-gradient-to-br from-white to-amber-50 border-2 border-amber-200 hover:border-amber-400 rounded-lg p-4 transition-all hover:shadow-lg cursor-pointer';
      itemCard.setAttribute('data-turbo', 'false');
      itemCard.innerHTML = `
        <div class="flex items-start gap-3">
          <span class="material-symbols-outlined text-amber-600 text-2xl">${item.icon}</span>
          <div>
            <h5 class="font-bold text-gray-900 mb-1">${item.title}</h5>
            <p class="text-sm text-gray-600">${item.desc}</p>
          </div>
        </div>
      `;
      itemsGrid.appendChild(itemCard);
    });

    categoryDiv.appendChild(itemsGrid);
    categoriesContainer.appendChild(categoryDiv);
  });

  popup.classList.remove('hidden');
}

function closeDocPopup() {
  document.getElementById('docPopup').classList.add('hidden');
}

// ESC 키로 팝업 닫기
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeDocPopup();
  }
});

// 팝업 배경 클릭 시 닫기
document.getElementById('docPopup')?.addEventListener('click', function(event) {
  if (event.target === this) {
    closeDocPopup();
  }
});
</script>
