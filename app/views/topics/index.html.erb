<%# 법령 가이드 목록 페이지 %>

<% category_config = {
  "contract" => { color: "indigo",  icon: "gavel",         label: "계약" },
  "budget"   => { color: "blue",    icon: "account_balance",label: "예산/결산" },
  "expense"  => { color: "amber",   icon: "receipt_long",  label: "지출" },
  "salary"   => { color: "emerald", icon: "payments",      label: "급여/수당" },
  "subsidy"  => { color: "violet",  icon: "volunteer_activism", label: "보조금" },
  "property" => { color: "teal",    icon: "domain",        label: "공유재산" },
  "travel"   => { color: "rose",    icon: "flight_takeoff",label: "여비/출장" },
  "duty"     => { color: "orange",  icon: "badge",         label: "복무" },
  "other"    => { color: "slate",   icon: "folder_open",   label: "기타" }
} %>

<!-- 페이지 헤더 -->
<section class="gradient-premium text-white py-12 lg:py-16 relative overflow-hidden">
  <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/3"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/4"></div>
  <div class="container-wide relative z-10">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
      <div class="flex items-start gap-5">
        <div class="w-16 h-16 bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center border border-white/20 shadow-lg">
          <span class="material-symbols-outlined text-4xl text-white">library_books</span>
        </div>
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold tracking-tight mb-2">법령 가이드</h1>
          <p class="text-white/80 text-lg">주요 법령을 법률→시행령→규칙 체계로 쉽게 정리</p>
        </div>
      </div>
      <div class="flex gap-4 lg:gap-6">
        <div class="text-center px-4 py-2 bg-white/10 backdrop-blur-md rounded-xl border border-white/15">
          <div class="text-2xl font-bold"><%= @total_count %></div>
          <div class="text-xs text-white/70 mt-0.5">전체 법령</div>
        </div>
        <div class="text-center px-4 py-2 bg-white/10 backdrop-blur-md rounded-xl border border-white/15">
          <div class="text-2xl font-bold"><%= @topics_by_category.keys.count %></div>
          <div class="text-xs text-white/70 mt-0.5">분야</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- 카테고리 탭 -->
<section class="bg-white/80 backdrop-blur-xl border-b border-gray-100 sticky top-16 z-40 shadow-soft">
  <div class="container-wide py-3">
    <div class="flex flex-wrap gap-2" id="category-tabs">
      <button data-category="전체" class="tab-btn active px-5 py-2.5 bg-indigo-600 text-white rounded-xl text-sm font-semibold shadow-md transition-all">전체</button>
      <% @topics_by_category.each_key do |cat| %>
        <% cfg = category_config[cat] || { color: "slate", label: cat } %>
        <button data-category="<%= cat %>" class="tab-btn px-5 py-2.5 bg-gray-100 text-slate-600 hover:bg-gray-200 rounded-xl text-sm font-medium transition-all">
          <%= cfg[:label] %>
          <span class="ml-1 text-xs text-slate-400">(<%= @topics_by_category[cat].count %>)</span>
        </button>
      <% end %>
    </div>
  </div>
</section>

<!-- 법령 목록 -->
<section class="py-10 bg-background-light min-h-screen">
  <div class="container-wide">
    <% @topics_by_category.each do |cat, topics| %>
      <% cfg = category_config[cat] || { color: "slate", icon: "folder_open", label: cat } %>

      <% if cat == "contract" && @contract_subgroups.present? %>
        <%# 계약 카테고리: 서브그룹 헤더 + 점프 내비게이션 %>
        <% cache ["topics_contract_subgroups_v4", topics.size, topics.last&.updated_at] do %>
        <div class="topic-section mb-12" data-category="contract">
          <!-- 카테고리 헤더 -->
          <div class="flex items-center gap-3 mb-5">
            <div class="w-9 h-9 rounded-xl bg-indigo-100 flex items-center justify-center">
              <span class="material-symbols-outlined text-indigo-600 text-xl">gavel</span>
            </div>
            <h2 class="text-xl font-bold text-slate-900">계약</h2>
            <span class="text-sm text-slate-400"><%= topics.count %>개</span>
          </div>

          <!-- 점프 내비게이션 (서브그룹 칩) -->
          <nav class="mb-8 -mx-1" aria-label="계약 세부 분류 바로가기">
            <div class="flex flex-wrap gap-2 px-1">
              <% @contract_subgroups.each do |sg| %>
                <button
                  type="button"
                  class="subgroup-chip inline-flex items-center gap-1.5 px-4 py-2 bg-white border border-slate-200 rounded-xl text-sm font-medium text-slate-600 hover:bg-indigo-50 hover:border-indigo-200 hover:text-indigo-700 transition-all shadow-sm"
                  data-target="subgroup-<%= sg[:id] %>"
                  onclick="document.getElementById(this.dataset.target).scrollIntoView({behavior:'smooth',block:'start'});this.blur();"
                >
                  <span class="material-symbols-outlined text-base"><%= sg[:icon] %></span>
                  <%= sg[:label] %>
                  <span class="text-xs text-slate-400">(<%= sg[:topics].size %>)</span>
                </button>
              <% end %>
            </div>
          </nav>

          <!-- 서브그룹별 카드 그리드 -->
          <% color = "indigo" %>
          <% @contract_subgroups.each_with_index do |sg, idx| %>
            <div id="subgroup-<%= sg[:id] %>" class="<%= 'mt-10' unless idx == 0 %>" style="scroll-margin-top: 10rem;">
              <!-- 서브그룹 헤더 -->
              <div class="flex items-center gap-2.5 mb-4 pb-3 border-b border-slate-100">
                <div class="w-8 h-8 rounded-lg bg-indigo-50 flex items-center justify-center">
                  <span class="material-symbols-outlined text-indigo-500 text-lg"><%= sg[:icon] %></span>
                </div>
                <div>
                  <h3 class="text-base font-bold text-slate-800"><%= sg[:label] %></h3>
                  <p class="text-xs text-slate-400 mt-0.5"><%= sg[:desc] %></p>
                </div>
                <span class="ml-auto text-xs font-medium text-indigo-500 bg-indigo-50 px-2.5 py-1 rounded-lg"><%= sg[:topics].size %>개</span>
              </div>

              <!-- 토픽 카드 -->
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <% sg[:topics].each do |topic| %>
                  <% topic_icon = TopicsController::TOPIC_ICONS[topic.slug] || "gavel" %>
                  <% card_class = "group flex items-start gap-4 rounded-2xl bg-white p-5 shadow-sm border border-slate-100 transition-all hover:shadow-lg hover:-translate-y-0.5 hover:border-#{color}-100 cursor-pointer" %>
                  <% icon_wrap = "shrink-0 flex h-11 w-11 items-center justify-center rounded-xl bg-#{color}-50 text-#{color}-600 group-hover:bg-#{color}-600 group-hover:text-white transition-colors" %>
                  <% title_class = "font-bold text-base text-slate-900 group-hover:text-#{color}-600 transition-colors mb-1" %>
                  <% arrow_class = "material-symbols-outlined text-slate-300 group-hover:text-#{color}-400 transition-colors self-center text-lg" %>
                  <%= link_to topic_path(topic.slug), class: card_class do %>
                    <div class="<%= icon_wrap %>">
                      <span class="material-symbols-outlined text-xl"><%= topic_icon %></span>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="<%= title_class %>"><%= topic.name %></h3>
                      <% if topic.summary.present? %>
                        <p class="text-sm text-slate-500 leading-snug line-clamp-2"><%= topic.summary.truncate(60) %></p>
                      <% end %>
                    </div>
                    <span class="<%= arrow_class %>">chevron_right</span>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <% end %> <%# cache %>

      <% else %>
        <%# 계약 외 카테고리: 기존 레이아웃 유지 %>
        <% cache ["topics_category_v2", cat, topics.size, topics.last&.updated_at] do %>
        <div class="topic-section mb-12" data-category="<%= cat %>">
          <!-- 카테고리 헤더 -->
          <div class="flex items-center gap-3 mb-6">
            <div class="w-9 h-9 rounded-xl bg-<%= cfg[:color] %>-100 flex items-center justify-center">
              <span class="material-symbols-outlined text-<%= cfg[:color] %>-600 text-xl"><%= cfg[:icon] %></span>
            </div>
            <h2 class="text-xl font-bold text-slate-900"><%= cfg[:label] %></h2>
            <span class="text-sm text-slate-400"><%= topics.count %>개</span>
          </div>

          <!-- 토픽 카드 그리드 -->
          <% color = cfg[:color] %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% topics.each do |topic| %>
              <% topic_icon = TopicsController::TOPIC_ICONS[topic.slug] || cfg[:icon] %>
              <% card_class = "group flex items-start gap-4 rounded-2xl bg-white p-5 shadow-sm border border-slate-100 transition-all hover:shadow-lg hover:-translate-y-0.5 hover:border-#{color}-100 cursor-pointer" %>
              <% icon_wrap = "shrink-0 flex h-11 w-11 items-center justify-center rounded-xl bg-#{color}-50 text-#{color}-600 group-hover:bg-#{color}-600 group-hover:text-white transition-colors" %>
              <% title_class = "font-bold text-base text-slate-900 group-hover:text-#{color}-600 transition-colors mb-1" %>
              <% arrow_class = "material-symbols-outlined text-slate-300 group-hover:text-#{color}-400 transition-colors self-center text-lg" %>
              <%= link_to topic_path(topic.slug), class: card_class do %>
                <div class="<%= icon_wrap %>">
                  <span class="material-symbols-outlined text-xl"><%= topic_icon %></span>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="<%= title_class %>"><%= topic.name %></h3>
                  <% if topic.summary.present? %>
                    <p class="text-sm text-slate-500 leading-snug line-clamp-2"><%= topic.summary.truncate(60) %></p>
                  <% end %>
                </div>
                <span class="<%= arrow_class %>">chevron_right</span>
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %> <%# cache %>
      <% end %>
    <% end %> <%# each %>
  </div>
</section>

<script>
  (function() {
    // 상위 카테고리 탭 전환
    const tabs = document.querySelectorAll('.tab-btn');
    const sections = document.querySelectorAll('.topic-section');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const cat = tab.dataset.category;

        tabs.forEach(t => {
          t.classList.remove('active', 'bg-indigo-600', 'text-white', 'shadow-md');
          t.classList.add('bg-gray-100', 'text-slate-600');
        });
        tab.classList.add('active', 'bg-indigo-600', 'text-white', 'shadow-md');
        tab.classList.remove('bg-gray-100', 'text-slate-600');

        sections.forEach(sec => {
          if (cat === '전체' || sec.dataset.category === cat) {
            sec.classList.remove('hidden');
          } else {
            sec.classList.add('hidden');
          }
        });
      });
    });

    // 서브그룹 점프 칩: 스크롤 위치에 따라 active 칩 하이라이트
    const chips = document.querySelectorAll('.subgroup-chip');
    const subgroups = [];
    chips.forEach(chip => {
      const el = document.getElementById(chip.dataset.target);
      if (el) subgroups.push({ chip, el });
    });

    if (subgroups.length > 0) {
      let ticking = false;
      const updateActiveChip = () => {
        const scrollY = window.scrollY + 180; // sticky 헤더 + 점프 칩 높이 보정
        let activeIdx = 0;
        subgroups.forEach((sg, i) => {
          if (sg.el.offsetTop <= scrollY) activeIdx = i;
        });
        chips.forEach((chip, i) => {
          if (i === activeIdx) {
            chip.classList.add('bg-indigo-50', 'border-indigo-300', 'text-indigo-700');
            chip.classList.remove('bg-white', 'border-slate-200', 'text-slate-600');
          } else {
            chip.classList.remove('bg-indigo-50', 'border-indigo-300', 'text-indigo-700');
            chip.classList.add('bg-white', 'border-slate-200', 'text-slate-600');
          }
        });
        ticking = false;
      };

      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(updateActiveChip);
          ticking = true;
        }
      }, { passive: true });

      // 초기 상태 반영
      updateActiveChip();
    }
  })();
</script>
