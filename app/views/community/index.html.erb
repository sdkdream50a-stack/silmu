<%# 커뮤니티 페이지 - 오픈 예정 %>

<!-- 페이지 헤더 -->
<section class="gradient-premium text-white py-12 lg:py-16">
  <div class="container-wide">
    <div class="flex items-start gap-5">
      <div class="w-16 h-16 bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center border border-white/20 shadow-lg">
        <span class="material-symbols-outlined text-4xl text-white">forum</span>
      </div>
      <div>
        <h1 class="text-3xl lg:text-4xl font-bold tracking-tight">커뮤니티</h1>
        <p class="text-navy-200 mt-2 text-lg">공무원들의 실무 경험과 노하우를 나누는 공간</p>
      </div>
    </div>
  </div>
</section>

<!-- 오픈 예정 안내 -->
<section class="section py-16">
  <div class="container-wide">
    <div class="max-w-2xl mx-auto text-center">
      <div class="card p-10 shadow-strong">
        <div class="w-20 h-20 bg-point-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <span class="material-symbols-outlined text-5xl text-point-600">construction</span>
        </div>
        <h2 class="text-2xl font-bold text-navy-900 mb-4">커뮤니티 준비 중입니다</h2>
        <p class="text-navy-600 leading-relaxed mb-8">
          계약·예산 실무 담당자들이 경험과 노하우를 나눌 수 있는 커뮤니티를 준비하고 있습니다.<br>
          오픈 시 안내드리겠습니다.
        </p>

        <div class="grid sm:grid-cols-3 gap-4 mb-8">
          <div class="bg-surface-50 rounded-xl p-4">
            <span class="material-symbols-outlined text-2xl text-forest-600 mb-2">help</span>
            <h4 class="font-semibold text-navy-900 text-sm">질문/답변</h4>
            <p class="text-xs text-navy-500 mt-1">실무 궁금증 해결</p>
          </div>
          <div class="bg-surface-50 rounded-xl p-4">
            <span class="material-symbols-outlined text-2xl text-warm-600 mb-2">lightbulb</span>
            <h4 class="font-semibold text-navy-900 text-sm">실무 팁</h4>
            <p class="text-xs text-navy-500 mt-1">경험에서 나온 노하우</p>
          </div>
          <div class="bg-surface-50 rounded-xl p-4">
            <span class="material-symbols-outlined text-2xl text-point-600 mb-2">description</span>
            <h4 class="font-semibold text-navy-900 text-sm">서식 공유</h4>
            <p class="text-xs text-navy-500 mt-1">실무 양식 공유</p>
          </div>
        </div>

        <p class="text-navy-500 text-sm mb-4">지금 바로 활용할 수 있는 기능을 이용해보세요.</p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <%= link_to chatbot_path, class: "btn btn-primary" do %>
            <span class="material-symbols-outlined">smart_toy</span>
            AI 상담
          <% end %>
          <%= link_to faq_path, class: "btn btn-glass" do %>
            <span class="material-symbols-outlined">quiz</span>
            자주 묻는 질문
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
