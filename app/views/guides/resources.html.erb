<script>
  // 현재 필터 상태
  let currentOrg = '전체';
  let currentCategory = '전체';

  // 기관 유형 필터
  function filterByOrg(org) {
    currentOrg = org;

    // 버튼 활성화
    document.querySelectorAll('.org-filter-btn').forEach(btn => {
      btn.classList.toggle('active', btn.dataset.org === org);
    });

    applyFilters();
  }

  // 업무 분야 카테고리 필터
  function filterByCategory(category) {
    currentCategory = category;

    // 탭 활성화
    document.querySelectorAll('.category-tab').forEach(tab => {
      tab.classList.toggle('active', tab.dataset.category === category);
    });

    applyFilters();
  }

  // 필터 적용
  function applyFilters() {
    document.querySelectorAll('.resource-card').forEach(card => {
      const cardOrg = card.dataset.org;
      const cardCategory = card.dataset.category;

      // 기관 유형 필터 (공통은 항상 표시)
      const orgMatch = currentOrg === '전체' || cardOrg === '공통' || cardOrg === currentOrg;

      // 카테고리 필터 (편람 탭은 type이 편람인 것만)
      let categoryMatch = false;
      if (currentCategory === '전체') {
        categoryMatch = true;
      } else if (currentCategory === '편람') {
        // 편람 탭: 모든 분야의 편람 자료 표시
        const badge = card.querySelector('.resource-badge');
        categoryMatch = badge && badge.textContent === '편람';
      } else {
        categoryMatch = cardCategory === currentCategory;
      }

      if (orgMatch && categoryMatch) {
        card.style.display = '';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // 자료 카드 토글
  function toggleResource(card) {
    const content = card.querySelector('.resource-content');
    const icon = card.querySelector('.resource-expand-icon');
    const isOpen = content.style.display !== 'none';

    // 모든 카드 닫기
    document.querySelectorAll('.resource-card').forEach(c => {
      c.querySelector('.resource-content').style.display = 'none';
      c.querySelector('.resource-expand-icon').style.transform = 'rotate(0deg)';
      c.classList.remove('expanded');
    });

    // 클릭된 카드 열기/닫기
    if (!isOpen) {
      content.style.display = 'block';
      icon.style.transform = 'rotate(180deg)';
      card.classList.add('expanded');
    }
  }

  // FAQ 토글
  function toggleFaq(btn) {
    const answer = btn.nextElementSibling;
    const isOpen = answer.classList.contains('open');

    // 모든 FAQ 닫기
    document.querySelectorAll('.faq-question').forEach(q => q.classList.remove('open'));
    document.querySelectorAll('.faq-answer').forEach(a => a.classList.remove('open'));

    // 클릭된 항목 열기/닫기
    if (!isOpen) {
      btn.classList.add('open');
      answer.classList.add('open');
    }
  }

  // 검색
  document.getElementById('search-input').addEventListener('input', function(e) {
    const term = e.target.value.toLowerCase();

    if (term === '') {
      // 검색어가 비면 필터 다시 적용
      applyFilters();
      return;
    }

    document.querySelectorAll('.resource-card').forEach(card => {
      const title = card.dataset.title.toLowerCase();
      const summary = card.querySelector('.resource-summary')?.textContent.toLowerCase() || '';

      if (title.includes(term) || summary.includes(term)) {
        card.style.display = '';
      } else {
        card.style.display = 'none';
      }
    });
  });
</script>
