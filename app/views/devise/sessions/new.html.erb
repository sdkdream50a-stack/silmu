<%# 로그인 페이지 - 프리미엄 디자인 시스템 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- 로고 -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 gradient-navy rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">실</span>
        </div>
        <span class="text-2xl font-bold text-navy-900">실무</span>
      <% end %>
    </div>

    <!-- 로그인 카드 -->
    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-navy-900 text-center mb-2">로그인</h2>
      <p class="text-navy-500 text-center mb-8">실무에 오신 것을 환영합니다</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "input" %>
        </div>

        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <label class="flex items-center cursor-pointer group">
              <%= f.check_box :remember_me, class: "text-point-600 focus:ring-point-500 rounded w-4 h-4" %>
              <span class="ml-2 text-sm text-navy-600 group-hover:text-navy-900 transition-colors">로그인 유지</span>
            </label>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "text-sm text-point-600 hover:text-point-700 font-medium transition-colors" %>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= f.submit "로그인", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>

      <!-- 소셜 로그인 -->
      <div class="mt-8">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-navy-500">또는</span>
          </div>
        </div>

        <div class="mt-6">
          <button class="w-full flex items-center justify-center gap-3 py-3 px-4 bg-[#FEE500] hover:bg-[#FDD800] text-[#3C1E1E] rounded-xl font-semibold transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 3C6.5 3 2 6.58 2 11c0 2.87 1.91 5.4 4.78 6.85-.15.54-.97 3.47-1 3.64 0 .09.03.18.1.24.06.05.15.08.23.06.31-.04 3.63-2.38 4.2-2.79.55.08 1.12.12 1.69.12 5.5 0 10-3.58 10-8 0-4.42-4.5-8-10-8z"/>
            </svg>
            카카오로 시작하기
          </button>
        </div>
      </div>

      <!-- 회원가입 링크 -->
      <p class="mt-8 text-center text-sm text-navy-600">
        아직 계정이 없으신가요?
        <%= link_to "회원가입", new_registration_path(resource_name), class: "text-point-600 hover:text-point-700 font-semibold ml-1 transition-colors" %>
      </p>
    </div>
  </div>
</div>
