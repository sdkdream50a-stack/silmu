<%# 비밀번호 변경 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- 로고 -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 gradient-slate rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">실</span>
        </div>
        <span class="text-2xl font-bold text-slate-900">실무</span>
      <% end %>
    </div>

    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-slate-900 text-center mb-2">새 비밀번호 설정</h2>
      <p class="text-slate-500 text-center mb-8">새로운 비밀번호를 입력해 주세요</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
            새 비밀번호
            <% if @minimum_password_length %>
              <span class="font-normal text-slate-400 ml-1">(<%= @minimum_password_length %>자 이상)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div>
          <%= f.submit "비밀번호 변경", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
