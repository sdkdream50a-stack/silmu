<%# 인증 메일 재발송 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 gradient-navy rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">실</span>
        </div>
        <span class="text-2xl font-bold text-navy-900">실무</span>
      <% end %>
    </div>

    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-navy-900 text-center mb-2">인증 메일 재발송</h2>
      <p class="text-navy-500 text-center mb-8">가입 시 입력한 이메일로 인증 메일을 다시 보내드립니다</p>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "이메일 주소",
              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "input" %>
        </div>

        <div>
          <%= f.submit "인증 메일 재발송", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>

      <p class="mt-8 text-center text-sm text-navy-600">
        <%= link_to "로그인으로 돌아가기", new_session_path(resource_name), class: "text-point-600 hover:text-point-700 font-semibold transition-colors" %>
      </p>
    </div>
  </div>
</div>
