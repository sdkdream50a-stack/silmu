<%# 회원가입 페이지 - 프리미엄 디자인 시스템 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- 로고 -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 gradient-navy rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">실</span>
        </div>
        <span class="text-2xl font-bold text-navy-900">실무</span>
      <% end %>
    </div>

    <!-- 회원가입 카드 -->
    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-navy-900 text-center mb-2">회원가입</h2>
      <p class="text-navy-500 text-center mb-8">실무와 함께 더 나은 업무 환경을 만들어보세요</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "input" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-navy-700 mb-2" do %>
            비밀번호
            <% if @minimum_password_length %>
              <span class="font-normal text-navy-400 ml-1">(<%= @minimum_password_length %>자 이상)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <!-- 이용약관 동의 -->
        <div class="space-y-3">
          <label class="flex items-start cursor-pointer group">
            <input type="checkbox" required class="text-point-600 focus:ring-point-500 rounded w-4 h-4 mt-0.5">
            <span class="ml-2 text-sm text-navy-600">
              <a href="#" class="text-point-600 hover:underline">이용약관</a> 및
              <a href="#" class="text-point-600 hover:underline">개인정보처리방침</a>에 동의합니다 (필수)
            </span>
          </label>
          <label class="flex items-start cursor-pointer group">
            <input type="checkbox" class="text-point-600 focus:ring-point-500 rounded w-4 h-4 mt-0.5">
            <span class="ml-2 text-sm text-navy-600">유용한 업무 팁과 새로운 기능 소식을 받아보시겠습니까? (선택)</span>
          </label>
        </div>

        <div>
          <%= f.submit "회원가입", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>

      <!-- 소셜 로그인 -->
      <div class="mt-8">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-navy-500">또는</span>
          </div>
        </div>

        <div class="mt-6">
          <button class="w-full flex items-center justify-center gap-3 py-3 px-4 bg-[#FEE500] hover:bg-[#FDD800] text-[#3C1E1E] rounded-xl font-semibold transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 3C6.5 3 2 6.58 2 11c0 2.87 1.91 5.4 4.78 6.85-.15.54-.97 3.47-1 3.64 0 .09.03.18.1.24.06.05.15.08.23.06.31-.04 3.63-2.38 4.2-2.79.55.08 1.12.12 1.69.12 5.5 0 10-3.58 10-8 0-4.42-4.5-8-10-8z"/>
            </svg>
            카카오로 시작하기
          </button>
        </div>
      </div>

      <!-- 로그인 링크 -->
      <p class="mt-8 text-center text-sm text-navy-600">
        이미 계정이 있으신가요?
        <%= link_to "로그인", new_session_path(resource_name), class: "text-point-600 hover:text-point-700 font-semibold ml-1 transition-colors" %>
      </p>
    </div>
  </div>
</div>
