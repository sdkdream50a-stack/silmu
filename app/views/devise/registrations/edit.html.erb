<%# 계정 설정 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- 로고 -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <svg width="48" height="48" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg" class="drop-shadow-md">
          <defs><linearGradient id="logo_grad_dev" gradientUnits="userSpaceOnUse" x1="20" y1="20" x2="180" y2="180"><stop stop-color="#137fec"/><stop offset="1" stop-color="#0ea5e9"/></linearGradient></defs>
          <path d="M100 20C60 20 40 45 40 45V140C40 165 70 180 100 180C130 180 160 165 160 140V45C160 45 140 20 100 20Z" fill="url(#logo_grad_dev)"/>
          <path d="M85 70H115" stroke="white" stroke-linecap="round" stroke-opacity="0.9" stroke-width="8"/>
          <path d="M70 100H130" stroke="white" stroke-linecap="round" stroke-opacity="0.9" stroke-width="8"/>
          <path d="M85 130H115" stroke="white" stroke-linecap="round" stroke-opacity="0.9" stroke-width="8"/>
          <circle cx="100" cy="50" fill="white" fill-opacity="0.9" r="6"/>
        </svg>
        <span class="text-2xl font-bold text-slate-900">실무</span>
      <% end %>
    </div>

    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-slate-900 text-center mb-2">계정 설정</h2>
      <p class="text-slate-500 text-center mb-8">비밀번호 변경 및 계정 관리</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-amber-50 border border-amber-200 rounded-xl p-3 text-sm text-amber-700">
            인증 대기 중: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :current_password, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
            현재 비밀번호
            <span class="font-normal text-slate-400 ml-1">(변경사항 확인 필수)</span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div class="border-t border-gray-100 pt-4">
          <%= f.label :password, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
            새 비밀번호
            <span class="font-normal text-slate-400 ml-1">(변경하지 않으려면 비워두세요)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-slate-400"><%= @minimum_password_length %>자 이상</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <!-- 뉴스레터 수신 -->
        <div class="border-t border-gray-200 pt-5">
          <label class="flex items-start cursor-pointer group">
            <%= f.check_box :newsletter_agreed, class: "text-indigo-600 focus:ring-indigo-500 rounded w-4 h-4 mt-0.5" %>
            <span class="ml-2 text-sm text-slate-600">유용한 업무 팁과 새로운 기능 소식 받기 (선택)</span>
          </label>
        </div>

        <div>
          <%= f.submit "저장", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>

      <!-- 계정 삭제 -->
      <div class="border-t border-gray-200 mt-8 pt-6">
        <h3 class="text-sm font-semibold text-rose-600 mb-3">계정 삭제</h3>
        <p class="text-sm text-slate-500 mb-4">계정을 삭제하면 모든 데이터가 영구적으로 삭제됩니다.</p>
        <%= button_to "계정 삭제", registration_path(resource_name),
          method: :delete,
          data: { turbo_confirm: "정말로 계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다." },
          class: "btn btn-sm text-rose-600 border border-rose-300 hover:bg-rose-50 transition-colors cursor-pointer" %>
      </div>

      <p class="mt-6 text-center">
        <%= link_to "돌아가기", :back, class: "text-sm text-slate-500 hover:text-slate-700 transition-colors" %>
      </p>
    </div>
  </div>
</div>
