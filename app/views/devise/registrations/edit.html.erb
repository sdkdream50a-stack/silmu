<%# 계정 설정 %>

<div class="min-h-screen bg-surface-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- 로고 -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 gradient-navy rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">실</span>
        </div>
        <span class="text-2xl font-bold text-navy-900">실무</span>
      <% end %>
    </div>

    <div class="card p-8 shadow-strong">
      <h2 class="text-2xl font-bold text-navy-900 text-center mb-2">계정 설정</h2>
      <p class="text-navy-500 text-center mb-8">비밀번호 변경 및 계정 관리</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-warm-50 border border-warm-200 rounded-xl p-3 text-sm text-warm-700">
            인증 대기 중: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-navy-700 mb-2" do %>
            새 비밀번호
            <span class="font-normal text-navy-400 ml-1">(변경하지 않으려면 비워두세요)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-navy-400"><%= @minimum_password_length %>자 이상</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-semibold text-navy-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-semibold text-navy-700 mb-2" do %>
            현재 비밀번호
            <span class="font-normal text-navy-400 ml-1">(변경사항 확인용)</span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "••••••••", class: "input" %>
        </div>

        <div>
          <%= f.submit "저장", class: "w-full btn btn-primary btn-lg cursor-pointer" %>
        </div>
      <% end %>

      <!-- 계정 삭제 -->
      <div class="border-t border-gray-200 mt-8 pt-6">
        <h3 class="text-sm font-semibold text-rose-600 mb-3">계정 삭제</h3>
        <p class="text-sm text-navy-500 mb-4">계정을 삭제하면 모든 데이터가 영구적으로 삭제됩니다.</p>
        <%= button_to "계정 삭제", registration_path(resource_name),
          method: :delete,
          data: { turbo_confirm: "정말로 계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다." },
          class: "btn btn-sm text-rose-600 border border-rose-300 hover:bg-rose-50 transition-colors cursor-pointer" %>
      </div>

      <p class="mt-6 text-center">
        <%= link_to "돌아가기", :back, class: "text-sm text-navy-500 hover:text-navy-700 transition-colors" %>
      </p>
    </div>
  </div>
</div>
