<!-- Guides Section -->
<section id="guides" class="section bg-white">
  <div class="container-wide">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <span class="badge badge-forest mb-4">가이드</span>
      <h2 class="text-navy-900 mb-6">실무 가이드</h2>
      <p class="text-xl text-navy-600 max-w-2xl mx-auto">
        선배 공무원의 노하우를 담은 실전 가이드
      </p>
    </div>

    <!-- Guide Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% [
        { gradient: "from-navy-600 to-navy-800", icon: "menu_book", badge: "신규 공무원", badge_color: "navy", title: "공무원 첫 출근 완벽 가이드", desc: "첫 출근부터 수습 기간까지 알아야 할 모든 것" },
        { gradient: "from-forest-500 to-forest-700", icon: "shield", badge: "업무", badge_color: "forest", title: "감사 대비 문서 작성법", desc: "감사원 지적 사례로 배우는 안전한 문서 작성" },
        { gradient: "from-warm-500 to-orange-600", icon: "account_balance", badge: "재테크", badge_color: "warm", title: "공무원 연금 완벽 정리", desc: "연금 제도부터 최적화 전략까지" }
      ].each do |guide| %>
        <article class="group card card-hover overflow-hidden">
          <div class="h-48 bg-gradient-to-br <%= guide[:gradient] %> flex items-center justify-center group-hover:scale-[1.02] transition-transform duration-500">
            <span class="material-symbols-outlined text-6xl text-white/90"><%= guide[:icon] %></span>
          </div>
          <div class="p-6 md:p-8">
            <span class="badge badge-<%= guide[:badge_color] %> mb-4"><%= guide[:badge] %></span>
            <h3 class="font-bold text-lg text-navy-900 mb-3 group-hover:text-<%= guide[:badge_color] %>-600 transition-colors"><%= guide[:title] %></h3>
            <p class="text-navy-600 text-sm mb-4 leading-relaxed"><%= guide[:desc] %></p>
            <a href="javascript:void(0)" onclick="alert('해당 가이드는 준비 중입니다.')" class="inline-flex items-center gap-1 text-<%= guide[:badge_color] %>-600 hover:text-<%= guide[:badge_color] %>-700 font-semibold text-sm transition-colors cursor-pointer">
              읽어보기
              <span class="material-symbols-outlined text-lg">arrow_forward</span>
            </a>
          </div>
        </article>
      <% end %>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <%= link_to guides_path, class: "inline-flex items-center gap-2 text-forest-600 hover:text-forest-700 font-semibold transition-colors" do %>
        모든 가이드 보기
        <span class="material-symbols-outlined text-xl">arrow_forward</span>
      <% end %>
    </div>
  </div>
</section>

