<%# 실무 도구 목록 페이지 - Stitch 디자인 기반 %>

<!-- 페이지 헤더 -->
<section class="bg-gradient-to-r from-indigo-600 to-indigo-700 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl md:text-4xl font-bold mb-4">실무 도구</h1>
    <p class="text-indigo-100 text-lg">복잡한 계산과 검토를 간편하게</p>
  </div>
</section>

<!-- 카테고리 탭 -->
<section class="bg-white border-b sticky top-16 z-40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex gap-1 overflow-x-auto py-4">
      <button class="px-6 py-2 bg-indigo-600 text-white rounded-full text-sm font-medium whitespace-nowrap">전체</button>
      <button class="px-6 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-full text-sm font-medium transition-colors whitespace-nowrap">계산기</button>
      <button class="px-6 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-full text-sm font-medium transition-colors whitespace-nowrap">AI 도구</button>
      <button class="px-6 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-full text-sm font-medium transition-colors whitespace-nowrap">체크리스트</button>
    </div>
  </div>
</section>

<!-- 도구 그리드 -->
<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% [
        { title: "여비계산기", desc: "출장 여비(운임, 숙박비, 식비, 일비)를 자동으로 계산합니다.", icon: "directions_car", color: "blue", category: "계산기", path: travel_calculator_path },
        { title: "초과근무수당 계산기", desc: "시간외근무, 야간근무, 휴일근무 수당을 계산합니다.", icon: "schedule", color: "green", category: "계산기", path: "#" },
        { title: "연가일수 계산기", desc: "재직기간에 따른 연가일수를 자동 계산합니다.", icon: "event_available", color: "purple", category: "계산기", path: "#" },
        { title: "공문서 AI 작성 도우미", desc: "AI가 공문서 초안을 작성해 드립니다.", icon: "auto_awesome", color: "amber", category: "AI 도구", path: "#", badge: "NEW" },
        { title: "예정가격 계산기", desc: "복수예비가격 및 예정가격을 산출합니다.", icon: "calculate", color: "teal", category: "계산기", path: "#" },
        { title: "계약 체크리스트", desc: "계약 단계별 필수 확인사항을 점검합니다.", icon: "checklist", color: "orange", category: "체크리스트", path: "#" },
        { title: "수의계약 판단기", desc: "수의계약 가능 여부를 자동으로 판단합니다.", icon: "gavel", color: "red", category: "AI 도구", path: "#" },
        { title: "법정기간 계산기", desc: "행정처분, 소송 등의 법정기간을 계산합니다.", icon: "calendar_month", color: "indigo", category: "계산기", path: "#" },
        { title: "견적서 검토 도구", desc: "견적서의 적정성을 자동으로 검토합니다.", icon: "fact_check", color: "cyan", category: "AI 도구", path: "/forms/견적서검토.html", badge: "인기" },
      ].each do |tool| %>
        <%= link_to tool[:path], class: "group bg-white rounded-2xl border border-gray-200 p-6 hover:shadow-xl hover:border-#{tool[:color]}-300 transition-all relative overflow-hidden" do %>
          <% if tool[:badge] %>
            <span class="absolute top-4 right-4 text-xs font-semibold px-2 py-1 <%= tool[:badge] == 'NEW' ? 'bg-amber-100 text-amber-600' : 'bg-purple-100 text-purple-600' %> rounded-full"><%= tool[:badge] %></span>
          <% end %>

          <div class="w-14 h-14 rounded-xl bg-<%= tool[:color] %>-100 text-<%= tool[:color] %>-600 flex items-center justify-center mb-4 group-hover:bg-<%= tool[:color] %>-600 group-hover:text-white transition-colors">
            <span class="material-symbols-outlined text-3xl"><%= tool[:icon] %></span>
          </div>

          <span class="text-xs font-medium text-gray-400 mb-2 block"><%= tool[:category] %></span>
          <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-<%= tool[:color] %>-600 transition-colors"><%= tool[:title] %></h3>
          <p class="text-gray-600 text-sm leading-relaxed"><%= tool[:desc] %></p>

          <div class="mt-4 flex items-center text-<%= tool[:color] %>-600 text-sm font-medium">
            바로가기
            <span class="material-symbols-outlined text-lg ml-1 group-hover:translate-x-1 transition-transform">arrow_forward</span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-16 bg-gray-50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">필요한 도구가 없으신가요?</h2>
    <p class="text-gray-600 mb-8">원하시는 도구를 요청해주시면 검토 후 개발을 진행합니다.</p>
    <button class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
      도구 요청하기
    </button>
  </div>
</section>
