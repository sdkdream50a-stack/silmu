    <%# Iconify - SVG 아이콘 프레임워크 (Material Symbols 대체, 1.1MB → 50KB) %>
    <script src="https://code.iconify.design/3/3.1.0/iconify.min.js" defer></script>

    <script>
      // Material Symbols → Iconify 자동 변환
      function convertMaterialIcons() {
        const icons = document.querySelectorAll('.material-symbols-outlined:not([data-icon])');
        icons.forEach(icon => {
          const iconName = icon.textContent.trim();
          if (iconName) {
            const iconifyName = iconName.replace(/_/g, '-');
            icon.setAttribute('data-icon', `material-symbols:${iconifyName}`);
            icon.textContent = '';
            icon.classList.add('iconify');
          }
        });
        // Iconify 스캔 실행
        if (typeof Iconify !== 'undefined' && Iconify.scan) {
          Iconify.scan();
        }
      }

      // 페이지 로드 시 변환
      document.addEventListener('DOMContentLoaded', function() {
        convertMaterialIcons();

        // MutationObserver로 동적 생성 아이콘 감지
        const observer = new MutationObserver(function(mutations) {
          mutations.forEach(function(mutation) {
            if (mutation.addedNodes.length > 0) {
              // 새로 추가된 노드에서 아이콘 변환
              convertMaterialIcons();
            }
          });
        });

        // body 전체 감시
        observer.observe(document.body, {
          childList: true,
          subtree: true
        });
      });

      // Turbo 네비게이션 후 변환
      document.addEventListener('turbo:load', convertMaterialIcons);
      document.addEventListener('turbo:render', convertMaterialIcons);
    </script>

