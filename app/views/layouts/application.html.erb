        }
      </script>

      <!-- AdSense 광고 중앙 집중 초기화 (Turbo 캐시 중복 방지) -->
      <script>
        function initAdSlots() {
          document.querySelectorAll('.ad-slot[data-ad-status="pending"]').forEach(slot => {
            const ins = slot.querySelector('ins.adsbygoogle');
            if (ins && !ins.dataset.adsbygoogleStatus) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                slot.dataset.adStatus = 'loaded';
              } catch (e) {
                // 이미 로드된 광고는 무시
                console.debug('AdSense already loaded:', e.message);
              }
            }
            slot.dataset.adStatus = 'processed';
          });
        }

        // Turbo 페이지 로드 시마다 실행
        document.addEventListener('turbo:load', initAdSlots);
        // 첫 페이지 로드
        document.addEventListener('DOMContentLoaded', initAdSlots);
      </script>
    <% end %>

    <% if Rails.env.production? && Rails.application.credentials.clarity_project_id.present? %>
