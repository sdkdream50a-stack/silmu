    <script>
      (function() {
        // Mobile Menu Toggle
        var mobileMenuBtn = document.getElementById('mobile-menu-btn');
        var mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenuBtn && mobileMenu) {
          mobileMenuBtn.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            var icon = mobileMenuBtn.querySelector('.material-symbols-outlined');
            if (icon) {
              var iconName = mobileMenu.classList.contains('hidden') ? 'menu' : 'close';
              icon.setAttribute('data-icon', 'material-symbols:' + iconName);
              if (typeof Iconify !== 'undefined') {
                Iconify.scan();
              }
            }
          });
        }

        // Navbar scroll effect (passive + rAF throttle)
        var nav = document.getElementById('main-nav');
        if (nav) {
          var ticking = false;
          window.addEventListener('scroll', function() {
            if (!ticking) { ticking = true; requestAnimationFrame(function() {
              if (window.scrollY > 10) { nav.classList.add('shadow-soft'); nav.style.borderBottomColor = 'rgba(0,0,0,0.06)'; }
              else { nav.classList.remove('shadow-soft'); nav.style.borderBottomColor = ''; }
              ticking = false;
            }); }
          }, {passive: true});
        }

        // Quick Menu Toggle
        var qBtn = document.getElementById('quick-menu-btn'), qItems = document.getElementById('quick-menu-items');
        var qIcon = document.getElementById('quick-menu-icon'), qText = document.getElementById('quick-menu-text');
        var qLabel = document.getElementById('quick-menu-label'), qBadge = document.getElementById('quick-menu-badge');
        if (qBtn && qItems) {
          function closeQuickMenu() {
            qItems.classList.add('hidden');
            if (qIcon) {
              qIcon.setAttribute('data-icon', 'material-symbols:widgets');
              if (typeof Iconify !== 'undefined') Iconify.scan();
            }
            if(qText) qText.textContent='도구';
            if(qBadge) qBadge.classList.remove('hidden');
          }
          qBtn.addEventListener('click', function() {
            qItems.classList.toggle('hidden'); if(qLabel) qLabel.classList.add('hidden');
            if (qItems.classList.contains('hidden')) { closeQuickMenu(); }
            else {
              if (qIcon) {
                qIcon.setAttribute('data-icon', 'material-symbols:close');
                if (typeof Iconify !== 'undefined') Iconify.scan();
              }
              if(qText) qText.textContent='닫기';
              if(qBadge) qBadge.classList.add('hidden');
              localStorage.setItem('silmu_quick_menu_seen','true');
            }
          });
          document.addEventListener('click', function(e) { if(!qBtn.contains(e.target)&&!qItems.contains(e.target)) closeQuickMenu(); });
          if (!localStorage.getItem('silmu_quick_menu_seen')) {
            setTimeout(function() { if(qLabel) qLabel.classList.remove('hidden'); qBtn.classList.add('quick-menu-pulse');
              setTimeout(function() { if(qLabel) qLabel.classList.add('hidden'); qBtn.classList.remove('quick-menu-pulse'); }, 5000);
            }, 2000);
          }
        }
      })();
    </script>
